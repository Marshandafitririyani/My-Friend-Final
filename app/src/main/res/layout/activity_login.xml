<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img_bgn_tranparan"
        tools:context=".ui.login.LoginActivity">

        <ImageView
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_200sdp"
            android:layout_marginStart="@dimen/_60sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:contentDescription="@string/todo3"
            android:src="@drawable/img_logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_150sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_50sdp"
                android:gravity="center"
                android:text="@string/my_friend"
                android:textColor="@color/fanta_400"
                android:textSize="@dimen/_25ssp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/know_your_friends"
                android:textColor="@color/fanta_400"
                android:textSize="@dimen/_13ssp" />


            <EditText
                android:id="@+id/et_phone_login"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_40sdp"
                android:autofillHints="phone"
                android:background="@drawable/custom_box"
                android:foreground="?selectableItemBackground"
                android:drawableStart="@drawable/ic_smartphone"
                android:drawablePadding="@dimen/_8sdp"
                android:hint="@string/phone"
                android:inputType="phone"
                android:padding="@dimen/_10sdp" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                app:hintEnabled="false"
                app:passwordToggleEnabled="true">

                <EditText
                    android:id="@+id/et_password_login"
                    android:layout_width="@dimen/_280sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:autofillHints="password"
                    android:background="@drawable/custom_box"
                    android:foreground="?selectableItemBackground"
                    android:drawableStart="@drawable/ic_password"
                    android:drawablePadding="@dimen/_8sdp"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:padding="@dimen/_10sdp"
                    android:singleLine="true" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tv_register_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_235sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="?selectableItemBackground"
                android:foreground="?selectableItemBackground"
                android:text="@string/register"
                android:textColor="@color/fanta_400"
                android:textSize="@dimen/_15ssp" />

            <Button
                android:id="@+id/btn_login"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_90sdp"
                android:background="@drawable/custom_buttom"
                android:foreground="?selectableItemBackground"
                android:text="@string/login"
                android:textAllCaps="false"
                android:textSize="@dimen/_18ssp" />

        </LinearLayout>

    </RelativeLayout>

</layout>